<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#54CC82"
    tools:context=".PostPage">

    <TextView
        android:id="@+id/postTitle"
        android:layout_width="335dp"
        android:layout_height="75dp"
        android:layout_marginTop="28dp"
        android:background="#81E7C5"
        android:gravity="center"
        android:text="title"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postschoolLesson"
        android:layout_width="178dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="#81E7C5"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/postPrice"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="@+id/postPrice"
        app:layout_constraintTop_toBottomOf="@+id/theSchoolLesson" />

    <TextView
        android:id="@+id/theSchoolLesson"
        android:layout_width="118dp"
        android:layout_height="34dp"
        android:layout_marginTop="12dp"
        android:gravity="center|left"
        android:text="School_lesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postPrice" />

    <TextView
        android:id="@+id/postPrice"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:background="#81E7C5"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thePrice" />

    <TextView
        android:id="@+id/thePrice"
        android:layout_width="91dp"
        android:layout_height="28dp"
        android:layout_marginTop="24dp"
        android:text="price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postTitle" />

    <TextView
        android:id="@+id/postseller"
        android:layout_width="182dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#81E7C5"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/postschoolLesson"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/postschoolLesson"
        app:layout_constraintTop_toBottomOf="@+id/theSeller" />

    <TextView
        android:id="@+id/theSeller"
        android:layout_width="87dp"
        android:layout_height="29dp"
        android:layout_marginTop="20dp"
        android:text="Seller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postschoolLesson" />

    <TextView
        android:id="@+id/theFeatures"
        android:layout_width="84dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:text="Features"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postseller" />

    <TextView
        android:id="@+id/postFeatures"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#81E7C5"
        android:gravity="left"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/postseller"
        app:layout_constraintTop_toBottomOf="@+id/theFeatures" />

    <Button
        android:id="@+id/GoProfilePage"
        android:layout_width="327dp"
        android:layout_height="55dp"
        android:layout_marginTop="14dp"
        android:background="@color/blue_button"
        android:text="Look At Book Profile"
        android:textColor="@color/white"
        android:textColorHint="@color/actionBarColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postFeatures" />

    <Button
        android:id="@+id/GoSeller"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/blue_button"
        android:text="Visit S eller Profile"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GoProfilePage" />

    <ImageButton
        android:id="@+id/reportPost"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_marginTop="58dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="@+id/postTitle"
        app:layout_constraintTop_toTopOf="@+id/postTitle" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/postschoolLesson"
        app:layout_constraintTop_toBottomOf="@+id/postTitle"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>