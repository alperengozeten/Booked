<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackgroundColor"
    tools:context=".LoginScreen">

    <TextView
        android:id="@+id/verified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Verify your email adress"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/successfullyVerified"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:lineSpacingExtra="15dp"
        android:text="Please enter the 4 digit code sent to example@xxx.edu.tr"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verified" />

    <EditText
        android:id="@+id/blankNumberEditText"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@color/textBackground"
        android:gravity="center"
        android:inputType="number"
        android:letterSpacing="0.9"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/successfullyVerified" />

    <ImageView
        android:id="@+id/lineBetweenNumbers1"
        android:layout_width="10dp"
        android:layout_height="80dp"
        android:layout_marginStart="80dp"
        android:background="@color/primaryBackgroundColor"
        app:layout_constraintBottom_toBottomOf="@+id/blankNumberEditText"
        app:layout_constraintStart_toStartOf="@+id/blankNumberEditText"
        app:layout_constraintTop_toTopOf="@+id/blankNumberEditText" />

    <ImageView
        android:id="@+id/lineBetweenNumbers3"
        android:layout_width="10dp"
        android:layout_height="80dp"
        android:layout_marginStart="80dp"
        android:background="@color/primaryBackgroundColor"
        app:layout_constraintBottom_toBottomOf="@+id/blankNumberEditText"
        app:layout_constraintStart_toEndOf="@+id/lineBetweenNumbers2"
        app:layout_constraintTop_toTopOf="@+id/blankNumberEditText"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/lineBetweenNumbers2"
        android:layout_width="10dp"
        android:layout_height="80dp"
        android:layout_marginStart="80dp"
        android:background="@color/primaryBackgroundColor"
        app:layout_constraintBottom_toBottomOf="@+id/blankNumberEditText"
        app:layout_constraintStart_toEndOf="@+id/lineBetweenNumbers1"
        app:layout_constraintTop_toTopOf="@+id/blankNumberEditText"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/resendCodeBtn"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:background="@color/button_color"
        android:hint="Resend Code"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmBtn" />

    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:background="@color/blue_button"
        android:hint="Go to main page"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeEmailBtn" />

    <Button
        android:id="@+id/changeEmailBtn"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:background="@color/button_color"
        android:hint="Change Email"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blankNumberEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>