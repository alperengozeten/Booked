<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailVerificationCheckActivity">

    <TextView
        android:id="@+id/verificationSentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:text="Verification link has been send.\nPlease check your email address"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/verificationSentText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/verificationSentText"
        android:text="Check the verification of your account"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verificationSentText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="CHECK"
        />

</RelativeLayout>
